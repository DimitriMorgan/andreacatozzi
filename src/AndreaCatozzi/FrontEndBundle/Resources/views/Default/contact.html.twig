{% extends "::base.html.twig" %}

{% block title "Andrea Catozzi - Contact" %}

{% block body %}
    <!-- container -->
    <div class="container">

        <div class="row">

            <!-- Article main content -->
            <article class="col-sm-9 ">
                <header class="page-header">
                    <h1 class="page-title">Contact Us</h1>
                </header>

                <p>
                    Weâ€™d love to hear from you. You have any problem ? Interested in working together? Fill out the form below and our Customer Service will get back to you as soon as possible.
                </p>
                <br>
                <form action="#" method="post">
                    <div class="row">
                        <div class="col-sm-4">
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Name' } }) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_widget(form.message, { 'attr': {'class': 'form-control messageContact', 'placeholder': 'Type your message here...'} }) }}
                            {{ form_errors(form.message) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    <br>
                    <div class="row">
                        <div class="col-sm-6">
                            {#<label class="checkbox"><input type="checkbox"> Sign up for newsletter</label>#}
                        </div>
                        <div class="col-sm-6 text-right">
                            <input class="btn btn-action" type="submit" value="Send message">
                        </div>
                    </div>
                </form>

            </article>
            <!-- /Article -->

        </div>
    </div>	<!-- /container -->

{% endblock %}