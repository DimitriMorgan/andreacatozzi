{% extends 'AndreaCatozziBackOfficeBundle::layout.html.twig' %}

{% block body -%}
    <h1>Media\Picture</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <img src="{{ asset('media/pictures/') }}{{ entity.path }}" />
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ entity.alt }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_pictures') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_pictures_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
